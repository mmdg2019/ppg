<?xml version="1.0" encoding="utf-8"?>
<odoo>
	<data noupdate="1">
		<!-- scheduled action: check invoice due cron log and send email if the cron's success log was not found -->
		<record id="ir_cron_email_invoice_due_cron_failure" model="ir.cron">
			<field name="name">Email Invoice Due Cron Failure</field>
			<field name="model_id" ref="account_ext.model_invoice_due_cron_log"></field>
			<field name="state">code</field>
			<field name="code">model.email_invoice_due_cron_failure()</field>
			<field name="active" eval="False"></field>
			<field name="user_id" ref="base.user_root"></field>
			<field name="interval_number">1</field>
			<field name="interval_type">days</field>
			<field name="numbercall">-1</field>
            <field name="doall" eval="False"/>
		</record>
	</data>
</odoo>
