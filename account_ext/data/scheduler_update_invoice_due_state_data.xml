<?xml version="1.0" encoding="utf-8"?>
<odoo>     
	<!-- scheduler action -->
	<data noupdate="1">                                    
		<record id="ir_cron_update_invoice_due_state" model="ir.cron">                                        
			<field name="name">Update Invoice Due State Scheduler</field>                                        
			<field name="model_id" ref="account_ext.model_account_move"></field>                                        
			<field name="state">code</field>                                        
			<field name="code">model._cron_update_invoice_due_state()</field>                                        
			<field name="active" eval="False"></field>                                        
			<field name="user_id" ref="base.user_root"></field>                                        
			<field name="interval_number">1</field>                                        
			<field name="interval_type">days</field>                                        
			<field name="numbercall">-1</field> 
            <field name="doall" eval="True"/>                                   
		</record>                                
	</data>                            
</odoo>
