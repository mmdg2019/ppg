<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="view_payment_term_form_account_ext" model="ir.ui.view">
            <field name="name">account.payment.term.form.inherit</field>
            <field name="model">account.payment.term</field>
            <field name="inherit_id" ref="account.view_payment_term_form"/>          
            <field name="arch" type="xml">
                <xpath expr="//group" position="inside">
                    <group>
                        <label for="due_factor"/>
                        <div class="mt-16">
                            <span><field name="due_factor" class="text-center oe_inline"/>Days</span>
                        </div>
                    </group>
                </xpath>
            </field>
        </record>
    </data>
</odoo>
