<?xml version="1.0" encoding="utf-8"?>

<odoo>
    <data>
         <record model='ir.ui.view' id='wizard_form'>
            <field name="name">wizard.stock.history.form</field>
            <field name="model">wizard.stock.history</field>
            <field name="arch" type="xml">
                <form string="Sale Report by Product Code">
                    <group string="Customer">
                        <field name="user" widget="many2many_tags" context="{'search_default_customer': 1,'res_partner_search_mode': 'customer', 'default_is_company': True, 'default_customer_rank': 1}"/>
                    </group>
<!--                     <group string="Warehouse">
                            <field name="warehouse" widget="many2many_tags"/>
                        </group> -->
<!--                     <notebook>
                            <page string="Category">
                                <field name="category">
                                    <tree>
                                        <field name="name"/>
                                    </tree>
                                </field>
                            </page>
                        </notebook> -->
                    <group string="Product">
                        <field name="products" widget="many2many_tags"/>
                    </group>
               <group col="4" colspan="4">
                   <field name="start_date" required="true"/>
                   <field name="end_date" required="true"/>
               </group>
               <footer>
                   <button name="print_report_xml" type="object" string="Print Report" class="oe_highlight"/>
                   <button string="Cancel" class="btn btn-default" special="cancel"/>
               </footer>
           </form>
            </field>
        </record>
        <record model='ir.ui.view' id='wizard_form_sales_report_by_client'>
            <field name="name">wizard.stock.history.form</field>
            <field name="model">wizard.stock.history</field>
            <field name="arch" type="xml">
                <form string="Sales Report by Client">
                    <group string="Customer">
                        <field name="user" widget="many2many_tags" context="{'search_default_customer': 1,'res_partner_search_mode': 'customer', 'default_is_company': True, 'default_customer_rank': 1}"/>
                    </group>
               <footer>
                   <button name="print_sales_report_by_client" type="object" string="Print Report" class="oe_highlight"/>
                   <button string="Cancel" class="btn btn-default" special="cancel"/>
               </footer>
           </form>
            </field>
        </record>

        <record model='ir.actions.act_window' id='wizard_act'>
            <field name="name">Export Sales Report by Product Code</field>
            <field name="res_model">wizard.stock.history</field>
            <field name="type">ir.actions.act_window</field>
            <field name="view_mode">form</field>
            <field name="view_id" ref="wizard_form"/>
            <field name="target">new</field>
        </record>
        <record model='ir.actions.act_window' id='wizard_act_sales_report_by_client'>
            <field name="name">Export Sales Report by Client</field>
            <field name="res_model">wizard.stock.history</field>
            <field name="type">ir.actions.act_window</field>
            <field name="view_mode">form</field>
            <field name="view_id" ref="wizard_form_sales_report_by_client"/>
            <field name="target">new</field>
        </record>


