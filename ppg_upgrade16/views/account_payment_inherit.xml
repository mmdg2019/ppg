<odoo>
    <data>
        <!-- Inherit the existing form view -->
        <record id="view_register_payment_inherit" model="ir.ui.view">
            <field name="name">Register Payment Inherit</field>
            <field name="model">account.payment</field>
            <field name="inherit_id" ref="account.view_account_payment_form"/> <!-- Replace with the actual external ID of the view you are inheriting -->
            <field name="arch" type="xml">
                <!-- Find the position to add the field (after the payment_type field) -->
                <xpath expr="//field[@name='payment_type']" position="after">
                    <field name="partner_type" widget="selection" attrs="{'required': [('state', '=', 'draft'), ('payment_type', 'in', ('inbound', 'outbound'))], 'invisible': [('payment_type', 'not in', ('inbound', 'outbound'))]}"/>
                </xpath>
                <!-- add index and invisible attribute to partner_id -->
                <xpath expr="//field[@name='partner_id'][1]" position="attributes">
                    <attribute name="attrs">{"invisible": [["payment_type","not in",["inbound","outbound"]]], "readonly": [["state","not in",["draft"]]], "required": [["state","=","draft"],["payment_type","in",["inbound","outbound"]]], 'invisible': ['|', ('partner_type','!=','customer'), ('is_internal_transfer', '=', True)]}</attribute>
                    <attribute name="domain">["&amp;","|",["customer_rank","&gt;",0],["supplier_rank","&gt;",0],["company_id","=",company_id]]</attribute>
                    <attribute name="options">{"always_reload": True, "no_open":True,"no_create":True,"no_create_edit":True}</attribute>
                </xpath>
                <xpath expr="//field[@name='partner_id'][2]" position="attributes">
                    <attribute name="attrs">{"invisible": [["payment_type","not in",["inbound","outbound"]]], "readonly": [["state","not in",["draft"]]], "required": [["state","=","draft"],["payment_type","in",["inbound","outbound"]]], 'invisible':['|', ('partner_type','!=','supplier'), ('is_internal_transfer', '=', True)]}</attribute>
                    <attribute name="domain">["&amp;","|",["customer_rank","&gt;",0],["supplier_rank","&gt;",0],["company_id","=",company_id]]</attribute>
                    <attribute name="options">{"always_reload": True, "no_open":True,"no_create":True,"no_create_edit":True}</attribute>
                </xpath>
            </field>
        </record>
    </data>
</odoo>
